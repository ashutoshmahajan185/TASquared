@{var model = (Data.Models.LayoutViewModel)ViewBag.layoutViewModel; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TA Squared</title>
    <link rel="stylesheet" href="~/Content/layout.css"/>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    

    <div class="container body-content">
        

                <div class='container example-one'>

                    <header class='example-one-header scroll'>

                        <nav class='vertical-align-middle'>
                            <span class='nav-item'>
                                @foreach (var item in model.areas)
                                {
                                    <span class="nav-item">
                                        @Html.ActionLink(item.name.ToString(), "IndexGivenPlaceOnly", "Posts", new { area_id = item.areaID, Place = "Area" }, null)
                                    </span>
                                }
                            </span>

                        </nav>
                    </header>
                </div>


                <div class='container example-one'>

                    <header class='example-one-header scroll'>

                        <nav class='vertical-align-middle'>
                            <span class='nav-item'>
                                @foreach (var item in model.categories)
                                {
                                    <span class="nav-item">
                                        @Html.ActionLink(item.name.ToString(), "IndexGivenTypeOnly", "Posts", new { category_id = item.categoryID, Type = "Category" }, null)
                                    </span>
                                }
                            </span>

                        </nav>
                    </header>
                </div>


                <p>@Html.DisplayName("Locales")</p>

                @foreach (var item in model.locales)
                {
                    //@Html.DisplayFor(modelitem => item.name)


                    @Html.ActionLink(item.name.ToString(), "IndexGivenPlaceOnly", "Posts", new { area_id = item.localeID, Place = "Locale" }, null)
                }


                <p>@Html.DisplayName("SubCategories")</p>

                @foreach (var item in model.subcategories)
                {
                    //@Html.DisplayFor(modelitem => item.name)
                    @Html.ActionLink(item.name.ToString(), "IndexGivenTypeOnly", "Posts", new { category_id = item.subCategoryID, Type = "SubCategory" }, null)
                }

        
            @RenderBody()


            <hr />
        
    </div>



        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
